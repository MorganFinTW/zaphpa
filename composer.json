{
  "name":"zaphpa/zaphpa",
  "type":"library",
  "description":"Intuitive, flexible and powerful HTTP router.",
  "homepage":"http://zaphpa.org/",
  "license":"MIT",
  "minimum-stability": "dev",
  "keywords": ["routing"],

  "authors": [
    {
      "name":"Ioseb Dzmanashvili",
      "homepage":"http://github.com/ioseb"
    },
    {
      "name":"Irakli Nadareishvili",
      "homepage":"http://github.com/inadarei"
    }
  ],

  "require":{
    "php": ">=5.3.0"
  },

  "autoload": {
    "psr-4": {
      "Zaphpa\\": "src/"
    }
  },

  "autoload-dev": {
    "classmap":["tests/"]
  },

  "require-dev":{
    "phpunit/phpunit": "~4.1.4",
    "satooshi/php-coveralls": "dev-master"
  },

  "scripts" : {
    "test" : "vendor/bin/phpunit -c 'tests/phpunit.xml' tests",
    "coveralls" : "composer test && php vendor/bin/coveralls"
  }
}

